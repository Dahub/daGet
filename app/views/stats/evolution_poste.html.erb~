<script>
//Flot Bar Chart

	$(document).ready(function() {			
		loadChart();
	});
	
	$('#valid_btn').on('click', function (e) {
		loadChart();
	});

	function loadChart(){
	
		$.ajax({
			url: "/stats/evolution_poste_data",
			data: 	{ 	
						operation_classification_id : $("#operation_classification_operation_classification_id").val(),
						bank_account_id: $("#bank_account_bank_account_id").val()
					},
			type: "POST",
			format: "json"
		}).done(
			function(jsonData) {
				// var chartData = [];
				// for(var i = 0; i<jsonData.length; i++){					
				//	chartData.push([jsonData[i][0] * 1000, jsonData[i][1]]);
				// }
				var outputData = [];
			 	var inputData = [];
//alert(jsonData.output[0][0]);
				for(var i = 0; i<jsonData.output.length; i++){
					outputData.push([jsonData.output[i][0] * 1000, jsonData.output[i][1]]);					
				}
				for(var i = 0; i<jsonData.input.length; i++){
					inputData.push([jsonData.input[i][0] * 1000, jsonData.input[i][1]]);
				}				
				
				var options = {
					xaxis: {
						mode: "time",
						timeformat: "%b %y", 
						minTickSize: [1, "month"]
					},
					yaxis: {                
						tickFormatter: function (v, axis) {
							return v + "€";
						}
					},    
					series: {            
						lines: {
							show: true,
							fill: true
						}
					},
					grid: {
						hoverable: true
					}
				};	
				var data = [
					{
						label: 'Débits',						
						data: outputData,
						color: "orange"
					},
					{
						label: 'Crédits',
						data: inputData,
						color: "green"
					}
				];

				//var data = [
				//	{
				//		data: chartData,
				//		color: "orange"
				//	}
				//];
				$.plot($("#flot-bar-chart"), data, options);

				$("<div id='tooltip'></div>").css({
					position: "absolute",
					display: "none",
					border: "1px solid #fdd",
					padding: "2px",
					"background-color": "#fee",
					opacity: 0.80
				}).appendTo("body");

				$("#flot-bar-chart").bind("plothover", function (event, pos, item) {					
					if (item) {
						var x = item.datapoint[0].toFixed(2),
							y = item.datapoint[1].toFixed(2);

						$("#tooltip").html(y + '€')
							.css({top: item.pageY+5, left: item.pageX+5})
							.fadeIn(200);
					} else {
						$("#tooltip").hide();
					}					
				});

						
			}
		).fail(
			function() {
				console.log( "error" );
				})
				
		};		
</script>
