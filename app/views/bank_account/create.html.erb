<% content_for :jumbo do %>
	<h1>Nouveau compte</h1>
<% end %>

<form class="form-horizontal" role="form">
	<div class="form-group">
		<%= form_for :bankAccount do |b| %>	  
			<%= label "name", "Dénomination", class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<%= b.text_field :name , class: "form-control", placeholder: "Nom du compte" %>
			</div>
		<% end %>
	</div>
	<button type="submit" class="btn btn-default">Valider</button>
</form>

	
