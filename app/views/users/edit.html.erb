<% content_for :jumbo do %>
	<h1 class="page-header">Mes informations</h1>
<% end %>

<div class="row">

	<%= render partial: "layouts/error", locals: {errors: @user.errors} %>

	<%= form_for @user , html: {:class => "form-horizontal"} do |u| %>
		<div class="form-group">		
			<%= label "fullname", "Votre nom", class: "col-sm-3 control-label" %>
			<div class="col-sm-8">
				<%= u.text_field( :fullname, class: "form-control", placeholder: "Votre nom")%>
			</div>	
		</div>
		<div class="form-group">
			<%= label "email", "Email", class: "col-sm-3 control-label" %>
			<div class="col-sm-8">
				<%= u.text_field( :email, class: "form-control", placeholder: "Votre adresse email")%>
			</div>				
		</div>
		<%= u.submit "Valider", class: "btn btn-lg btn-success btn-block"  %>
	<% end %>

</div>

